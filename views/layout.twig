<!DOCTYPE html>
<html>

<head>
  <title>{{ title }}</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  {# Navbar in Partials #}
  {% include "partials/menu.twig" %}

  <div class="container mt-3">
    {% if success %}<div class="alert alert-success" id="alert-success">{{success}}</div>{% endif %}
    {% if warning %}<div class="alert alert-warning" id="alert-warning">{{warning}}</div>{% endif %}
    {% if error %}<div class="alert alert-danger" id="alert-danger">{{error}}</div>{% endif %}
    {% block body %}{% endblock %}
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script>
    window.addEventListener('load', (event) => {
      setTimeout(() => {
        if (document.getElementById('alert-success')) {
          document.getElementById('alert-success').style.display = "none";
        } else if (document.getElementById('alert-warning')) {
          document.getElementById('alert-warning').style.display = "none";
        } else if (document.getElementById('alert-danger')) {
          document.getElementById('alert-danger').style.display = "none";
        }
      }, 9000);
    })
  </script>
</body>

</html>